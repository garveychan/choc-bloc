<div class="form-group py-2">
  <div class="container">
    <div class="py-5 text-center">
      <h2>Log In</h2>
      <p class="lead">Please enter your details below</p>
    </div>
  </div>
</div>

<div class="container text-center justify-content-center align-items-center" p-3 my-3 border>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group py-2">
      <div class="field">
        <div class="row">
          <div class="col-md-4 offset-4">
           <%#= f.label :email %><br />
          <p class="lead">Email</p>
          <%= f.email_field :email, :class => 'form-control', autofocus: true, autocomplete: "email" %>
        </div>
      </div>
    </div>
  </div>

<div class="form-group py-2">
  <div class="field">
    <div class="col-md-4 offset-4">
     <%#= f.label :password %><br />
     <p class="lead">Password</p>
      <%= f.password_field :password, :class => 'form-control',autocomplete: "current-password" %>
     </div>
    </div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-group py-2">
      <div class="field">
       <%= f.check_box :remember_me %>
       <%= f.label :remember_me %>
      </div>
    </div>
  <% end %>

  <div class="form-group py-2">
    <div class="actions">
     <%= f.submit "Log in",:class => 'btn btn-primary btn-lg btn-block' %>
   </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
