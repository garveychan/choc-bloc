<div class="container col-xxl-8 px-4 py-5">
  <div class="row flex-lg-row-reverse align-items-center g-5 py-5">
    <div class="col-10 col-sm-8 col-lg-6">
    <% if @listing.image.attached? %>
      <%= image_tag asset_path(url_for(@listing.image)), alt: 'Listing Image', class: 'd-block mx-lg-auto img-fluid', width:"700", height:"500", loading:"lazy" %>
    <% end %>
    </div>
    <div class="col-lg-6">
      <h1 class="display-5 fw-bold lh-1 mb-3"><%= @listing.name %></h1>
      <h2 class="display-10 fw-bold lh-1 mb-3">$<%= @listing.price.to_s.gsub(/(\d)(?=(\d{3})+(?!\d))/, '\1,')%></h2>
      <h3 class="display-15 fw-bold lh-1 mb-3"><%= @listing.age.to_s.gsub(/(\d)(?=(\d{3})+(?!\d))/, '\1,')%> days</h3>
      <p class="lead"><%= @listing.description %></p>
      <div class="d-grid gap-2 d-md-flex justify-content-md-start">
      <%= link_to "Meet the Seller - #{@listing.user[:first_name].to_s.capitalize} #{@listing.user[:last_name].to_s.capitalize}",  user_profile_path(@listing.user.id), type: 'h3', class: 'btn btn-primary btn-lg px-4 me-md-2' %>
        <% if @listing.user == current_user %>
          <%= link_to "Edit",  edit_listing_path(@listing), class: 'btn btn-secondary btn-lg px-4 me-md-2' %>
          <%= link_to "Delete",  listing_path(@listing), class: 'btn btn-danger btn-lg px-4', method: :delete, data: { confirm: "Are you sure?" }%>
        <% end %>
      </div>
    </div>
  </div>
</div>