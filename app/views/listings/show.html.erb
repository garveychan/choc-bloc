
<div class="form-group py-2">
  <div class="container">
    <div class="py-5 text-center">
      <h1><%= @listing.name %></h1>
    </div>
  </div>
</div>



<%= image_tag asset_path(url_for(@listing.image)), class: 'listing img-fit padd' %>

<h4>Price</h4>
<p><%= @listing.price %></hp>
<h4>Age</h4>
<p><%= @listing.age %></p>
<h4>Description</h4>
<p><%= @listing.description %></p>

<ul>
  <li><%= link_to "Edit", edit_listing_path(@listing) %></li>
  <li><%= button_to "Destroy", listing_path(@listing),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %></li>
</ul>