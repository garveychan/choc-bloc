<h1>Welcome</h1>
<h3>ChocBloc - Your one stop chocolate shop!</h3>

<%= link_to "New Listing", new_listing_path %>

<h2>Listings</h2>
     <ul>
         <% @listings.each do |listing|%>
            <li>
            <h3>Name</h3>
                <%= listing.name %>
             <h4>Price</h4>
                <%= listing.price %>
            <h4>Age</h4>
                <%= listing.age %>
            <h4>Description</h4>
                <%= listing.description %>
            </li>
        <% end %>     
    </ul>









