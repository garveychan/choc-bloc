<h1>Create Listing</h1>

<%= form_with model: @listing do |form| %>
    <div>
      <%= form.label :name %><br>
      <%= form.text_field :name %>
      <% @listing.errors.full_messages_for(:name).each do |message| %>

        <div><%= message %></div>
        <% end %>
    </div>
  
    <div>
      <%= form.label :price %><br>
      <%= form.text_area :price %>
      <% @listing.errors.full_messages_for(:price).each do |message| %>

        <div><%= message %></div>
        <% end %>
    </div>

    <div>
    <%= form.label :age %><br>
    <%= form.text_area :age %>
    <% @listing.errors.full_messages_for(:age).each do |message| %>

        <div><%= message %></div>
        <% end %>
  </div>
  <div>
  <%= form.label :description %><br>
  <%= form.text_area :description %>
  <% @listing.errors.full_messages_for(:description).each do |message| %>

    <div><%= message %></div>
    <% end %>
</div>

  
    <div>
      <%= form.submit %>
    </div>
  <% end %>